<?xml version="1.0" encoding="UTF-8"?>

<datasources xmlns="http://www.jboss.org/ironjacamar/schema">

    <datasource jndi-name="java:jboss/datasources/CDCollectionManagerDS" pool-name="CDCollectionManagerPool">
        <connection-url>jdbc:h2:mem:cdcollectionmanager;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE</connection-url>

        <driver>h2</driver>

        <pool>
            <max-pool-size>2</max-pool-size>
        </pool>

        <security>
            <user-name>admin</user-name>
            <password>password</password>
        </security>
    </datasource>

</datasources>